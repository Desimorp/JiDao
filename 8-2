#include<stdio.h>

void Input(float data[][5],int n){
	for(int i = 0; i < n; i++){
		int Seller = 0;
		int Product = 0;
		float Value = 0;
		scanf("%d %d %f",&Seller,&Product,&Value);
		data[Product-1][Seller-1] += Value;
	}
}

void Output(float data[][5]){
	for(int i = 0; i < 6; i++){
		for(int j = 0; j < 5; j++){
			printf("%.1f",data[i][j]);
			if(j!= 4)
				printf("\t");
			else
				printf("\n");
		}
	}
}

void Calculate(float data[][5]){
	for(int i = 0; i < 5; i++){
		for(int j = 0; j < 4; j++){
			data[i][4] += data[i][j];
			data[5][j] += data[i][j];
			data[5][4] += data[i][j];
		}
	}
}
int main(){
	int n;
	scanf("%d",&n);
	float data[6][5] = {0};
	Input(data,n);
	Calculate(data);
	Output(data);
	return 0;
}
