#include<stdio.h>

int reverseNum(int) ; 

int main()
{
    int        num ;

    scanf("%d",&num);
    printf("The reverse form of number %d is %d.\n",num,reverseNum(num)) ;

    return 0;
}

/* 请在这里填写答案 */
int reverseNum(int num)
{
    int rev = 0 ;
    while(num!= 0)
    {
        rev = rev * 10 + num % 10 ;
        num = num / 10 ;
    }
    return rev ;
}
