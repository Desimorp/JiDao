#include<stdio.h>

double getPrize(double x);

int main()
{
    double    x ;
    
    scanf("%lf",&x);
    printf("The prize is %.4f.\n",getPrize(x)) ;

    return 0 ;    
}

/* 请在这里填写答案 */
double getPrize(double x)
{
    double prize = 0.0;
    if (x <= 10)
    {
        prize = x * 0.1;
    }
    else if (x <= 20)
    {
        prize = getPrize(10) + (x - 10) * 0.075;
    }
    else if (x <= 40)
    {
        prize = getPrize(20) + (x - 20) * 0.05;
    }
    else if (x <= 60)
    {
        prize = getPrize(40) + (x - 40) * 0.03;
    }
    else if (x <= 100)
    {
        prize = getPrize(60) + (x - 60) * 0.015;
    }
    else
    {
        prize = getPrize(100) + (x - 100) * 0.01;
    }
    return prize;
}

