#include<stdio.h>

void printSpaces(int n);
void printStars(int n);
void printDiamond(int n);

int main() {
	int n;
	scanf("%d", &n);
	printDiamond(n);
	return 0;
}

void printSpaces(int n) 
{
	for (int i = 0; i < n; i++)
	{
		printf(" ");
	}
}

void printStars(int n)
{
	for (int i = 0; i < n; i++)
	{
		printf("*");
	}
}

void printDiamond(int n)
{
	for (int i = n; i > 0; i--)
	{
		printSpaces(i - 1);
		printStars(2*(n - i) + 1);
		printf("\n");
	}
	for (int i = n - 1; i > 0; i--)
	{
		printSpaces(n - i);
		printStars(2 * i - 1);
		printf("\n");
	}
}
