#include<stdio.h>
#include<string.h>

typedef struct{
    char name[21];
    int score;
}student;

int main(){
    student a[100];
    int n;
    scanf("%d",&n);
    for(int i = 0; i < n; i++){
        scanf("%s %d",a[i].name,&a[i].score);
    }
    for(int i = 0; i < n - 1; i++){
        for(int j = 0; j < n - i - 1; j++){
            if((a[j].score < a[j + 1].score) || (a[j].score == a[j + 1].score && strcmp(a[j].name,a[j + 1].name) > 0)){
                student temp = a[j];
                a[j] = a[j + 1];
                a[j + 1] = temp;
            }
        }
    }
    for(int i = 0; i < n; i++){
        printf("Name:%s\n",a[i].name);
        printf("total:%d\n",a[i].score);
        printf("\n");
    }
    return 0;
}
